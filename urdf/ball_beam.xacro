<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simplebean">
    <xacro:include filename="inertial_macros.xacro" />

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>
    <material name="blue">
        <color rgba="0.6 0.7 0.8 1" />
    </material>

    <!--Bottom
    plane-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="1 1 0.02" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <box size="1 1 0.02" />
            </geometry>
            <material name="blue" />
        </collision>
        <xacro:solid_cuboid_inertia mass="1" height="0.02" depth="1" width="1">
            <origin rpy="0 0 0" xyz="0 0 0" />
        </xacro:solid_cuboid_inertia>
    </link>

    <!-- Left Rod -->
    <link name="left_rod">
        <visual>
            <geometry>
                <box size="0.03 0.1 0.5" />
            </geometry>
            <origin rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.03 0.1 0.5" />
            </geometry>
            <origin rpy="0 0 0" />
        </collision>
        <xacro:solid_cuboid_inertia mass="1" height="0.03" depth="0.1" width="0.5">
            <origin rpy="0 0 0" xyz="0 0 0" />
        </xacro:solid_cuboid_inertia>
    </link>

    <joint name="base_to_left_rod" type="fixed">
        <parent link="base_link" />
        <child link="left_rod" />
        <origin xyz="-0.40 0 0.1" />
    </joint>

    <!-- Left Hinge -->
    <link name="left_hinge">
        <visual>
            <geometry>
                <box size="0.15 0.02 0.02" />
            </geometry>
            <origin xyz="0 0 0 " rpy="0 0 1.57075" />
            <material name="blue" />
        </visual>
        <xacro:solid_cuboid_inertia mass="1" height="0.02" depth="0.02" width="0.15">
            <origin xyz="0 0 0 " rpy="0 0 1.57075" />
        </xacro:solid_cuboid_inertia>
    </link>
    <joint name="rod_to_left_hinge" type="revolute">
        <parent link="left_rod" />
        <child link="left_hinge" />
        <axis xyz="0 1 0" />
        <origin xyz="0 0 0.2" />
        <limit effort="100" lower="-0.5" upper="0.5" velocity="100" />
    </joint>

    <!-- Center Beam -->
    <link name="center_beam">
        <visual>
            <geometry>
                <box size="0.02 0.1 0.75" />
            </geometry>
            <origin xyz="0.32 0 -0.1 " rpy="0 1.57075 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.1 0.75" />
            </geometry>
            <origin xyz="0.32 0 -0.1 " rpy="0 1.57075 0" />
        </collision>
        <xacro:solid_cuboid_inertia mass="1" height="0.75" depth="0.01" width="0.02">
            <origin xyz="0.32 0 -0.1 " rpy="0 1.57075 0" />
        </xacro:solid_cuboid_inertia>

    </link>

    <joint name="hinge_to_center_beam" type="continuous">
        <parent link="left_hinge" />
        <child link="center_beam" />
        <axis xyz="0 1 0" />
        <origin xyz="0 0 .1" />
    </joint>
</robot>